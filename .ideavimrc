" 2021-08-04
"
" ideavim
" https://youtrack.jetbrains.com/issue/VIM-765
set dialogescape=off

set clipboard=unnamed
" search
set hlsearch
set incsearch
set ignorecase
set smartcase

set visualbell

let mapleader = "\"

" https://github.com/JetBrains/ideavim/wiki/Emulated-plugins
set surround
set commentary
" set easymotion
set multiple-cursors
set highlightedyank
" set NERDTree

" key remap
nnoremap <space> :
vnoremap <space> :

nnoremap ; :
nnoremap : ;
vnoremap ; :
vnoremap : ;

inoremap jj <esc>
inoremap kk <esc>
nnoremap Y y$

nnoremap <leader>n :NERDTree

" https://www.jvt.me/posts/2020/05/15/intellij-vim-changelist/
nnoremap g; :action JumpToLastChange<Enter>
nnoremap g, :action JumpToNextChange<Enter>

"" https://gist.github.com/dewaka/ef947e52767bf453eaf77c852051eb7e
nnoremap [m :action MethodUp<cr>
nnoremap ]m :action MethodDown<cr>
